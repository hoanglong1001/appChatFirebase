<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_user_online"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:riv_border_color="#858383"
        app:riv_border_width="1dp"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/name_user_online"
        android:layout_below="@+id/img_user_online"
        android:text="Username"
        android:textSize="12dp"
        android:maxLength="12"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/stt_on_user_online"
        android:layout_alignBottom="@+id/img_user_online"
        android:layout_toEndOf="@+id/img_user_online"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="-10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_online"
        app:riv_oval="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/stt_off_user_online"
        android:layout_alignBottom="@+id/img_user_online"
        android:layout_toEndOf="@+id/img_user_online"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="-10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_offline"
        app:riv_oval="true" />
</RelativeLayout>