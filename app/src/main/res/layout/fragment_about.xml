<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ln_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_user_about"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:riv_border_color="#858383"
            app:riv_border_width="1dp"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/name_user_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Name"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/line_view"
        android:layout_below="@+id/ln_title"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/ln_hoten"
        android:layout_below="@id/line_view"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Họ tên"
            android:textSize="14sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_hoten"
            android:enabled="false"
            android:alpha="0.5"
            android:padding="8dp"
            android:inputType="text"
            android:textSize="14sp"
            android:textColor="#F5000000"
            android:layout_marginLeft="30dp"
            android:background="@drawable/item_bolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_diachi"
        android:layout_below="@id/ln_hoten"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Địa chỉ"
            android:textSize="14sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_diachi"
            android:background="@drawable/item_bolder"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="#F5000000"
            android:enabled="false"
            android:inputType="text"
            android:alpha="0.5"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_ngaysinh"
        android:layout_below="@+id/ln_diachi"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ngày sinh"
            android:textSize="14sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:inputType="date"
            android:id="@+id/edt_ngaysinh"
            android:layout_marginLeft="30dp"
            android:padding="8dp"
            android:enabled="false"
            android:textSize="14sp"
            android:textColor="#F5000000"
            android:alpha="0.5"
            android:background="@drawable/item_bolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_cmt"
        android:layout_below="@id/ln_ngaysinh"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="CMT"
            android:textSize="14sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_cmt"
            android:layout_marginLeft="30dp"
            android:inputType="number"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="#F5000000"
            android:enabled="false"
            android:maxLength="12"
            android:alpha="0.5"
            android:background="@drawable/item_bolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_update"
        android:text="Update info"
        android:enabled="false"
        android:layout_above="@+id/btn_edit"
        android:background="@drawable/item_bolder"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_edit"
        android:text="Edit info"
        android:layout_alignParentBottom="true"
        android:background="@drawable/item_bolder"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>


